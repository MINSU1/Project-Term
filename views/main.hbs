        <div id="no_address" style="display: none;">
           <div class="col-md-6 col-xs-12">
                    <div id="address_div" class="float-left">
                        <p id="guesttext">Please enter your address to continue as a guest</p>
                    </br>
                        <p id="guestentry">Address Line</p>
                    <form>
                        <input type="text" id="address_input" class="guest_address" placeholder="555">
                        <p>City</p>
                        <input type="text" id='city_input' class="guest_address" placeholder="ex)Vancouver">
                        <p>Postal Code</p>
                        <input type="text" id='zip_input' class="guest_address" placeholder="ex)V6B 3H6">
                    </form>
                        <button type="submit" id="address_submit">Submit</button>
                    </div>
                </div>
                <div class="clearfix visible-xs"></div>
                <div class="clearfix visible-xs"></div>
                <div class="col-md-6 col-xs-12">
                    <div id="login_div">
                        <p2>If you have an account, press login!</p2>
                        <button type="submit" id="login_submit">Sign in</button>
                        <img id="deliverypng" src="./img/scooter.png">  
                    </div>
                </div>
            </div>       

        </div>
            <!--Style this-->
        <div id="yes_address" style="display: none;">
            <div id="user_info">
                <img id="user_default" src="./img/user.png">
                <div id="username_info">
                    Username: {{{username}}}
                </div>
                <div id="address_info">
                    Address: {{{address}}}
                    <div id="left_sep" class="user_info_separator"></div>
                    <p4>OR</p4>
                    <div id="right_sep" class="user_info_separator"></div>
                    <button id='re_address'>New Address</button>
                   
                </div>
            </div>
             <button type="submit" id="next_submit" style="display:block;">Next</button>
        </div>
        <script>
            if (`{{{validity}}}` == 0) {
                document.getElementById("no_address").style.display = "block";
                document.getElementById("yes_address").style.display = "none";
                document.getElementById('next_submit').style.display = "none";
            } else if (`{{{validity}}}` == 1) {
                document.getElementById("no_address").style.display = "none";
                document.getElementById("yes_address").style.display = "block";
                document.getElementById('next_submit').style.display = "block";
            }
        </script>
